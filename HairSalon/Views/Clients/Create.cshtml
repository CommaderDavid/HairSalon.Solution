@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new Client</h4>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.ClientName)
    @Html.TextBoxFor(model => model.ClientName)
    <br>
    @Html.LabelFor(model => model.ClientPhone)
    @Html.TextBoxFor(model => model.ClientPhone)
    <br>
    @Html.LabelFor(model => model.ClientEmail)
    @Html.TextBoxFor(model => model.ClientEmail)
    <br>
    @Html.LabelFor(model => model.Stylist)
    @Html.DropDownList("StylistId")
    <br>
    <input type="submit" value="Add new item" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all clients", "Index")</p>