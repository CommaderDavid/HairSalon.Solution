@{
    Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
    <h3>You Must add a Stylist first!</h3>
}

@foreach (Client item in Model)
{
    <li>@Html.ActionLink($"{item.ClientName}", "Details", new { id = item.ClientId }) | @item.Stylist.StylistName
    </li>
}

<p>@Html.ActionLink("Add new client", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>